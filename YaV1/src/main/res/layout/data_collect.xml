<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="100"
        android:id="@+id/truefalse"
        android:layout_below="@+id/title"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FALSE"
            android:id="@+id/alert_false"
            android:layout_weight="40"
            android:textColor="#294eff"
            android:textStyle="bold"
            android:background="@drawable/btn_default_normal_lblue" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TRUE"
            android:id="@+id/alert_true"
            android:layout_weight="40"
            android:textColor="#294eff"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/btn_default_normal_yellow" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="IO"
            android:id="@+id/alert_io"
            android:layout_weight="20"
            android:textColor="#294eff"
            android:textStyle="bold"
            android:background="@drawable/btn_default_normal_yellow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/movingstatic"
        android:weightSum="100"
        android:layout_below="@+id/truefalse"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MOVING"
            android:id="@+id/alert_moving"
            android:layout_weight="50"
            android:textColor="#294eff"
            android:textStyle="bold"
            android:background="@drawable/btn_default_normal_lblue" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="STATIC"
            android:id="@+id/alert_static"
            android:layout_weight="50"
            android:textColor="#294eff"
            android:textStyle="bold"
            android:background="@drawable/btn_default_normal_yellow" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/movingstatic"
        android:weightSum="100"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/cancel"
            android:layout_weight="45"
            style="?android:attr/buttonBarButtonStyle"
            android:textAppearance="@android:style/TextAppearance.Large" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Record"
            android:layout_weight="45"
            android:id="@+id/ok"
            style="?android:attr/buttonBarButtonStyle"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </LinearLayout>
</RelativeLayout>